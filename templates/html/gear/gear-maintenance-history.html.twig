{% autoescape false %}
    <!-- Modal header -->
    <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
        <h3 class="flex items-center text-lg font-semibold text-gray-900">
            <span>{{ "Maintenance history"|trans }} - {{ gear.getName() }}</span>
        </h3>
        <div class="flex items-center">
            <button type="button" class="close text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
                <span class="sr-only">{{ "Close modal"|trans }}</span>
            </button>
        </div>
    </div>
    <!-- Modal body -->
    <div class="p-4 md:p-5 space-y-4">
        <div class="relative overflow-x-auto">
            <table class="w-full text-sm text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th scope="col" class="px-2 py-3">
                        <div class="w-[4.5rem] flex items-center justify-center" title="{{ "Date"|trans }}">
                            {{ svg('calendar') }}
                        </div>
                    </th>
                    <th scope="col" class="px-2 py-3 bg-gray-50 sticky left-0">
                        <div class="flex items-center justify-center">
                            {{ svg('components') }}
                        </div>
                    </th>
                    <th scope="col" class="px-2 py-3">
                        {{ "Activity"|trans }}
                    </th>
                    <th scope="col" class="px-6 py-3">
                        {{ "Tag"|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for maintenanceTaskTag in maintenanceTaskTags %}
                    <tr class="border-b {{ cycle(['bg-white', 'bg-gray-50'], loop.index0) }}">
                        <td class="px-2 py-2 text-center">
                            <div class="w-[4.5rem]">{{ maintenanceTaskTag.getTaggedOn()|formatDate() }}</div>
                        </td>
                        <th scope="row" class="px-2 py-2 sticky left-0 font-medium text-gray-900 whitespace-nowrap {{ cycle(['bg-white', 'bg-gray-50'], loop.index0) }}">
                            {{ maintenanceTaskTag.getTaggedForGearComponentName() }}
                        </th>
                        <td class="px-2 py-2 truncate">
                            {{ maintenanceTaskTag.getActivityName() }}
                        </td>
                        <td class="px-2 py-2 truncate">
                            {{ maintenanceTaskTag.getTag() }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endautoescape %}