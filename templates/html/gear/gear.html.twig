<div class="flex items-center justify-between mb-5">
    {% include 'html/navigation/breadcrumbs.html.twig' with {'breadcrumbs': [{
        'url': 'gear',
        'label': 'Gear'|trans
    }], 'disableMargin': true} %}
    <a href="#" data-model-content-url="{{ relativeUrl('gear/info.html') }}">
        <svg class="size-4 text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/></svg>
    </a>
</div>
{% autoescape false %}
    <!-- GEAR SUB MENU -->
    {% include 'html/gear/gear-sub-menu.html.twig' with {activeMenuItem: 'gear', maintenanceTaskIsDue: maintenanceTaskIsDue} %}
    <!-- GEAR STATS -->
    <div class="grid grid-cols-1 mb-4">
        <!-- STATS PER GEAR -->
        <div class="mb-4 p-4 bg-white border border-gray-200 rounded-lg shadow-xs">
            <div class="mb-4 flex items-center justify-between">
                <h3 class="text-lg font-semibold">
                    {{ "Gear stats"|trans }}
                </h3>
                {% if not customGearConfig.isFeatureEnabled() %}
                    <a href="https://statistics-for-strava-docs.robiningelbrecht.be/#/configuration/custom-gear" target="_blank" class="gap-x-0.5 flex items-center text-xs font-medium text-blue-600 hover:underline">
                        <span>{{ "Custom gear disabled"|trans }}</span>
                        <svg class="w-5 h-5 text-gray-400" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>
                    </a>
                {% endif %}
            </div>
            <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-center text-gray-500" data-accordion="table-gear"
                       data-active-classes="text-gray-500" data-inactive-classes="text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th rowspan="2" scope="col" class="px-2 py-3 sticky left-0 bg-gray-50">

                        </th>
                        <th rowspan="2" scope="col" class="px-6 py-3">
                            # {{ "workouts"|trans }}
                        </th>
                        <th rowspan="2" scope="col" class="px-6 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('distance') }}
                            </div>
                        </th>
                        <th rowspan="2" scope="col" class="px-6 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('elevation') }}
                            </div>
                        </th>
                        <th rowspan="2" scope="col" class="px-6 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('time') }}
                            </div>
                        </th>
                        <th rowspan="2" scope="col" class="px-6 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('speed') }}
                            </div>
                        </th>
                        <th rowspan="2" scope="col" class="px-2 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('calories') }}
                            </div>
                        </th>
                        <th rowspan="2" scope="col" class="px-2 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('wallet') }}
                            </div>
                        </th>
                        <th colspan="2" scope="col" class="px-2 py-3">
                            {{ "Relative cost"|trans }}
                        </th>
                    </tr>
                    <tr>
                        <th scope="col" class="px-2 pb-3 truncate font-normal normal-case">
                            {{ "per hour"|trans }}
                        </th>
                        <th scope="col" class="px-2 pb-3 truncate font-normal normal-case">
                            {{ "per activity"|trans }}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set globalLoopIndex = 0 %}
                    {% for statistic in gearStatistics.getForActiveGear() %}
                        {{ _self.gearStatisticRow(statistic, globalLoopIndex) }}
                        {% set globalLoopIndex = globalLoopIndex + 1 %}
                    {% endfor %}
                    {% set retiredGearStats = gearStatistics.getForRetiredGear() %}
                    {% if retiredGearStats %}
                        <tr class="cursor-pointer {{ cycle(['bg-white border-b', 'border-b bg-gray-50'], globalLoopIndex) }}"
                            id="table-retired-gear-header"
                            data-accordion-target="#table-retired-gear-content"
                            aria-expanded="false" aria-controls="table-retired-gear-content">
                            <td class="px-6 py-2 sticky left-0 whitespace-nowrap {{ cycle(['bg-white', 'bg-gray-50'], globalLoopIndex) }}">
                                <div class="flex items-center justify-center gap-x-2 text-gray-700 hover:underline">
                                    <svg data-accordion-icon class="size-2 rotate-180 shrink-0" aria-hidden="true"
                                         xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                              stroke-width="2"
                                              d="M9 5 5 1 1 5"/>
                                    </svg>
                                    <div>{{ "Retired gear"|trans }}</div>
                                </div>
                            </td>
                            <td colspan="9"></td>
                        </tr>
                        {% set globalLoopIndex = globalLoopIndex + 1 %}
                        </tbody>
                        <tbody class="hidden"
                               id="table-retired-gear-content"
                               aria-labelledby="table-retired-gear-header">
                        {% for statistic in gearStatistics.getForRetiredGear() %}
                            {{ _self.gearStatisticRow(statistic, globalLoopIndex) }}
                            {% set globalLoopIndex = globalLoopIndex + 1 %}
                        {% endfor %}
                        </tbody>
                    {% endif %}
                </table>
            </div>
        </div>
        <!-- DISTANCE PER MONTH PER GEAR -->
        <div class="mb-4  p-4 bg-white border border-gray-200 rounded-lg shadow-xs ">
            <div class="mb-4 flex items-center">
                <h3 class="text-lg font-semibold">
                    {{ "Distance per month per gear"|trans }}
                </h3>
                <button data-popover-target="popover-distance-per-month" data-popover-placement="right" type="button">
                    <svg class="w-4 h-4 ml-1 text-gray-400 hover:text-gray-500" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>
                    <span class="sr-only">{{ "Show information"|trans }}</span>
                </button>
                <div data-popover id="popover-distance-per-month" role="tooltip" class="w-50 lg:w-md absolute z-999999 invisible inline-block text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-xs opacity-0">
                    <p class="p-3">
                        {{ "Gear that hasn't been used in the last three months, is disabled by default."|trans }}
                    </p>
                </div>
            </div>
            <div class="relative overflow-x-auto">
                <div class="h-96" data-echarts-options='{{ distancePerMonthPerGearChart }}'></div>
            </div>
        </div>
        <!-- DISTANCE OVER TIME PER GEAR -->
        <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-xs">
            <div class="mb-4 flex items-center">
                <h3 class="text-lg font-semibold">
                    {{ "Distance over time per gear"|trans }}
                </h3>
                <button data-popover-target="popover-distance-overtime" data-popover-placement="right" type="button">
                    <svg class="w-4 h-4 ml-1 text-gray-400 hover:text-gray-500" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>
                    <span class="sr-only">{{ "Show information"|trans }}</span>
                </button>
                <div data-popover id="popover-distance-overtime" role="tooltip" class="w-50 lg:w-md absolute z-999999 invisible inline-block text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-xs opacity-0">
                    <p class="p-3">
                        {{ "Gear that is retired is disabled by default."|trans }}
                    </p>
                </div>
            </div>
            <div class="relative overflow-x-auto">
                <div class="h-96" data-echarts-options='{{ distanceOverTimePerGear }}'></div>
            </div>
        </div>
    </div>
{% endautoescape %}

{% macro gearStatisticRow(statistic, loopIndex) %}
    {% autoescape false %}
        <tr class="{{ cycle(['bg-white border-b', 'border-b bg-gray-50'], loopIndex) }}">
            <th scope="row" class="px-2 py-2 sticky left-0 font-medium text-gray-900 whitespace-nowrap {{ cycle(['bg-white', 'bg-gray-50'], loopIndex) }}">
                <a href="#" data-router-navigate="{{ relativeUrl('activities') }}" data-dataTable-filters='{"activities":{"gear":"{{ statistic.id }}"}}' class="font-medium text-blue-600 hover:underline">
                    {{ statistic.name }}
                </a>
            </th>
            <td class="px-6 py-2 truncate">
                {{ statistic.numberOfWorkouts }}
            </td>
            <td class="px-6 py-2 truncate">
                {% if statistic.distance.toFloat() > 0 %}
                    {{ statistic.averageDistance|renderMeasurement(0, 'avg'|trans) }} /
                    {{ statistic.distance|renderMeasurement(0, 'total'|trans) }}
                {% else %}
                    0<span class="text-xs">{{ statistic.distance.getSymbol() }}</span>
                {% endif %}
            </td>
            <td class="px-6 py-2 truncate">
                {{ statistic.elevation|renderMeasurement(0) }}
            </td>
            <td class="px-6 py-2 truncate" title="{{ statistic.movingTimeInHours.tofloat()|formatNumber(1) }}h">
                {{ statistic.movingTime }}
            </td>
            <td class="px-6 py-2 truncate">
                {{ statistic.averageSpeed|renderMeasurement(1) }}
            </td>
            <td class="px-6 py-2 truncate">
                {{ statistic.totalCalories|formatNumber(0) }}<span class="text-xs">kcal</span>
            </td>
            <td class="px-6 py-2 truncate">
                {% set purchasePrice = statistic.purchasePrice %}
                {% if purchasePrice %}
                    {{ purchasePrice|formatMoney }}
                {% else %}
                    -
                {% endif %}
            </td>
            <td class="px-6 py-2 truncate">
                {% set relativeCostPerHour = statistic.relativeCostPerHour %}
                {% if relativeCostPerHour %}
                    {{ relativeCostPerHour|formatMoney }}
                {% else %}
                    -
                {% endif %}
            </td>
            <td class="px-6 py-2 truncate">
                {% set relativeCostPerWorkout = statistic.relativeCostPerWorkout %}
                {% if relativeCostPerWorkout %}
                    {{ relativeCostPerWorkout|formatMoney }}
                {% else %}
                    -
                {% endif %}
            </td>
        </tr>
    {% endautoescape %}
{% endmacro %}