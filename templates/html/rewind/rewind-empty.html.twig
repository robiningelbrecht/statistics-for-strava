{% set breadcrumbs = [{
    'url': 'rewind',
    'label': 'Rewind'|trans
}] %}
{% autoescape false %}
    <div class="grid gap-4 p-4 bg-white border border-gray-200 rounded-lg shadow-xs">
        <div class="flex items-center p-2 text-sm text-blue-800 border border-blue-300 rounded-lg bg-blue-50"
             role="alert">
            <svg class="shrink-0 inline w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                 fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
            </svg>
            <span class="sr-only">Info</span>
            <div>
                {{ "You have not recorded any activities in the previous years."|trans }}
                {{ "Your Strava {year} rewind will be available on the 24th of December."|trans({'{year}': now.format('Y')}) }}
            </div>
        </div>
    </div>
{% endautoescape %}