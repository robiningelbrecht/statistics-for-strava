{% extends "html/base.html.twig" %}

{% block breadcrumbs %}
    <li>
        <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
            <a href="#" data-router-navigate="segments" class="ml-1 text-gray-700 hover:text-primary-600 md:ml-2 ">{{ "Segments"|trans }}</a>
        </div>
    </li>
{% endblock %}
{% block content %}
    {% autoescape false %}
        <div class="grid grid-cols-1 gap-4">
            <!-- SEGMENTS -->
            <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm ssm:p-6">
                <div data-dataTable-settings='{"url":"fetch-json/segment-data-table.json"}' class="relative">
                    <form class="flex flex-col gap-y-2 mb-2">
                        <div class="flex items-center">
                            <label for="search" class="sr-only">{{ "Search"|trans }}</label>
                            <div class="relative w-full">
                                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                                    <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                                    </svg>
                                </div>
                                <input id="search" type="search" placeholder="{{ "Search segment..."|trans }}" class="table-search bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5">
                            </div>
                        </div>
                        <div class="flex flex-col sm:flex-row gap-2">
                            {% if sportTypes|length > 0 %}
                                <div>
                                    <button id="dropdownSportTypesButton"
                                            data-dropdown-toggle="dropdownSportTypes" data-dropdown-offset-distance="10" data-dropdown-offset-skidding="0"
                                            class="w-fit text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center justify-between" type="button">
                                        <span>{{ "Filter on sport type"|trans }}</span>
                                        <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                                        </svg>
                                    </button>
                                    <div id="dropdownSportTypes" class="z-[20] w-fit hidden border border-gray-200 bg-white divide-y divide-gray-100 rounded-lg shadow-sm">
                                        <ul class="max-h-48 overflow-y-auto px-1 py-2 space-y-1 text-sm text-gray-700" aria-labelledby="dropdownSportTypesButton">
                                            {% for sportType in sportTypes %}
                                                <li>
                                                    <div class="flex items-center p-2 rounded-sm hover:bg-gray-100">
                                                        <input type="radio" id="{{ sportType.value }}" data-dataTable-filter="sportType" data-dataTable-filter-value="{{ sportType.value }}" name="sportType" value="{{ sportType.value }}" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2" />
                                                        <label for="{{ sportType.value }}" class="w-full ms-2 flex gap-x-1 items-center text-sm font-medium text-gray-500 cursor-pointer peer-checked:border-blue-600 peer-checked:text-blue-600 hover:text-gray-600 hover:bg-gray-100">
                                                            {{ renderSvg(sportType.getSvgIcon(), {'customPath': 'html/svg/sport-type'}) }}
                                                            <div>{{ sportType|trans }}</div>
                                                        </label>
                                                    </div>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            {% endif %}
                            <div>
                                <button id="dropdownOtherButton"
                                        data-dropdown-toggle="dropdownOther" data-dropdown-offset-distance="10" data-dropdown-offset-skidding="0"
                                        class="w-fit text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center justify-between" type="button">
                                    <span>{{ "Other"|trans }}</span>
                                    <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                                    </svg>
                                </button>
                                <div id="dropdownOther" class="z-[20] w-fit hidden border border-gray-200 bg-white divide-y divide-gray-100 rounded-lg shadow-sm">
                                    <ul class="max-h-48 overflow-y-auto px-1 py-2 space-y-1 text-sm text-gray-700" aria-labelledby="dropdownOtherButton">
                                        <li>
                                            <div class="flex items-center p-2 rounded-sm hover:bg-gray-100">
                                                <input type="checkbox" id="isFavourite" data-dataTable-filter="isFavourite" data-dataTable-filter-value="isFavourite" name="isFavourite" value="isFavourite" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2" />
                                                <label for="isFavourite" class="w-full ms-2 flex gap-x-1 items-center text-sm font-medium text-gray-500 cursor-pointer peer-checked:border-blue-600 peer-checked:text-blue-600 hover:text-gray-600 hover:bg-gray-100">
                                                    {{ renderSvg('star') }}
                                                    <div>{{ "Favourite"|trans }}</div>
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="flex items-center p-2 rounded-sm hover:bg-gray-100">
                                                <input type="checkbox" id="isKom" data-dataTable-filter="isKom" data-dataTable-filter-value="isKom" name="isKom" value="isKom" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 focus:ring-2" />
                                                <label for="isKom" class="w-full ms-2 flex gap-x-1 items-center text-sm font-medium text-gray-500 cursor-pointer peer-checked:border-blue-600 peer-checked:text-blue-600 hover:text-gray-600 hover:bg-gray-100">
                                                    {{ renderSvg('elevation', {'classes': 'h-4 shrink-0 text-strava-orange'}) }}
                                                    <div>{{ "KOM"|trans }}</div>
                                                </label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <button type="reset" data-dataTable-reset class="w-fit inline-flex items-center sm:ml-auto text-gray-900 bg-white focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 me-2" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" clip-rule="evenodd" aria-hidden="true" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path>
                                </svg>
                                {{ "Clear all"|trans }}
                            </button>
                        </div>
                    </form>
                    <div class="scroll-area overflow-auto max-h-[calc(100vh-240px)]">
                        <table class="w-full text-sm text-center text-gray-500">
                            <thead class="z-[10] sticky top-0 text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th scope="col" data-dataTable-sort="name" class="px-2 py-3 cursor-pointer">
                                    <div class="w-[23rem]">{{ renderSvg('sorting-icon') }}</div>
                                </th>
                                <th scope="col" class="px-2 py-3">
                                    <div class="flex items-center justify-center">
                                        {{ renderSvg('trophy') }}
                                    </div>
                                </th>
                                <th scope="col" data-dataTable-sort="distance" class="px-2 py-3 cursor-pointer">
                                    <div class="flex items-center justify-center">
                                        {{ renderSvg('distance') }}
                                        {{ renderSvg('sorting-icon') }}
                                    </div>
                                </th>
                                <th scope="col" data-dataTable-sort="max-gradient" class="px-2 py-3 cursor-pointer">
                                    <div class="flex items-center justify-center">
                                        {{ renderSvg('max-gradient') }}
                                        {{ renderSvg('sorting-icon') }}
                                    </div>
                                </th>
                                <th scope="col" data-dataTable-sort="ride-count" class="px-2 py-3 cursor-pointer">
                                    <div class="flex items-center justify-center">
                                        {{ renderSvg('hashtag') }}
                                        {{ renderSvg('sorting-icon') }}
                                    </div>
                                </th>
                            </tr>
                            </thead>
                            <tbody class="clusterize-content">
                            <tr class="clusterize-loading">
                                <td class="px-6 py-2 truncate">{{ "Loading data..."|trans }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}