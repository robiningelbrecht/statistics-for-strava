{% autoescape false %}
    <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold">{{ "Weekly goals"|trans }}</h3>
        <span class="text-sm">{{ fromToLabel }}</span>
    </div>
    <div class="grow flex flex-col justify-center">
        <div class="flex flex-col overflow-x-auto max-h-[320px] gap-y-4 divide-y divide-gray-200">
            {% for calculatedWeeklyGoal in calculatedWeeklyGoals %}
                {% set weeklyGoal = calculatedWeeklyGoal.weeklyGoal %}
                <div class="pb-4">
                    <div class="mb-1 flex justify-between">
                        <div class="flex items-center gap-x-0.5 text-sm text-grey-900">
                            <div>{{ svg(weeklyGoal.getType().getSvgIcon(), 'size-4') }}</div>
                            <div>{{ weeklyGoal.getLabel() }} - {{ calculatedWeeklyGoal.absolute|renderMeasurement(0) }}</div>
                        </div>
                        <div class="text-sm text-grey-900">{{ "Goal"|trans }}: {{ weeklyGoal.getGoal()|renderMeasurement(0) }}</div>
                    </div>
                    <div class="w-full rounded-full bg-gray-200">
                        {% if calculatedWeeklyGoal.relative > 0 %}
                            <div class="rounded-full bg-[#F26722] p-0.5 text-center text-xs leading-none font-medium text-white" style="width: {{ max(10, calculatedWeeklyGoal.relative) }}%">
                                {{ calculatedWeeklyGoal.relative }}%
                            </div>
                        {% else %}
                            <div class="rounded-full p-0.5 text-center text-xs leading-none font-medium text-grey-900" style="width: 10%">
                                0%
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endautoescape %}