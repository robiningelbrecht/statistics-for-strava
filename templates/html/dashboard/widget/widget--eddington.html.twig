{% autoescape false %}
    <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold"> {{ "Eddington"|trans }}</h3>
        <a href="#" data-router-navigate="{{ relativeUrl('eddington') }}"
           class="shrink-0 inline-flex items-center p-2 text-sm font-medium rounded-lg text-blue-600 hover:bg-gray-100">
            {{ "View details"|trans }}
        </a>
    </div>
    <div class="flex-grow-1 flex gap-x-4 divide-x divide-gray-200">
        {% for eddington in eddingtons %}
            <div class="w-full flex flex-col justify-center items-center gap-y-6 text-center">
                <div>
                    <div class="text-sm">
                        {{ eddington.getLabel() }}
                    </div>
                    <div class="text-3xl font-extrabold">
                        {{ eddington.getNumber() }}
                    </div>
                </div>
                <div>
                    <div class="text-2xl font-extrabold">
                        {{ eddington.getDaysToCompleteForFutureNumbers()[eddington.getNumber() + 1] ?? 1 }}
                    </div>
                    <div class="text-sm">{{ "days needed for next Eddington"|trans }}</div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endautoescape %}