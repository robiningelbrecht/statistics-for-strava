{% set uniqueId = uniqueNumberForId('dayTimeStatsWidget') %}
{% autoescape false %}
    <h3 class="mb-4 text-lg font-semibold">
        {{ "Daytime stats"|trans }}
    </h3>
    {% if statsPerActivityType|length > 0 %}
        <div class="tabs tabs--default">
            <ul id="dayTimeStatsActivityTypeTab{{ uniqueId }}" data-tabs="#dayTimeStatsActivityTypeTabContent{{ uniqueId }}"
                role="tablist">
                <li role="presentation">
                    <a href="#" data-tabs-target="#dayTimeStatsAll{{ uniqueId }}" role="tab" aria-controls="all">
                        {{ "All"|trans }}
                    </a>
                </li>
                {% for activityType,stats in statsPerActivityType %}
                    <li role="presentation">
                        <a href="#" data-tabs-target="#dayTimeStats{{ activityType }}{{ uniqueId }}" role="tab"
                           aria-controls="dayTimeStats{{ activityType }}{{ uniqueId }}">
                            {{ enum('App\\Domain\\Activity\\ActivityType').from(activityType)|trans }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <div id="dayTimeStatsActivityTypeTabContent{{ uniqueId }}">
        <div id="dayTimeStatsAll{{ uniqueId }}" role="tabpanel"
             aria-labelledby="dayTimeStatsAll{{ uniqueId }}-tab">
            <div class="h-80" data-echarts-options='{{ allActivities.chart }}'></div>
            <div class="relative overflow-x-auto">
                <table class="w-full text-sm text-center text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-2 py-3 sticky left-0 bg-gray-50">

                        </th>
                        <th scope="col" class="px-6 py-3">
                            # {{ "workouts"|trans }}
                        </th>
                        <th scope="col" class="px-6 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('distance') }}
                            </div>
                        </th>
                        <th scope="col" class="px-6 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('elevation') }}
                            </div>
                        </th>
                        <th scope="col" class="px-6 py-3">
                            <div class="flex items-center justify-center">
                                {{ svg('time') }}
                            </div>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for statistic in allActivities.dayTimeStats.getData() %}
                        <tr class="bg-white border-b">
                            <th scope="row"
                                class="px-2 py-2 sticky left-0 bg-white font-medium text-gray-900 whitespace-nowrap">
                                <div>{{ statistic.daytime|trans }}</div>
                                <div class="font-normal text-xs">{{ statistic.daytime.getHours()[0] }}h
                                    - {{ statistic.daytime.getHours()[1] }}h
                                </div>
                            </th>
                            <td class="px-6 py-2">
                                {{ statistic.numberOfWorkouts }}
                            </td>
                            <td class="px-6 py-2 truncate">
                                {% if statistic.totalDistance.toFloat() > 0 %}
                                    {{ statistic.averageDistance|renderMeasurement(0, 'avg'|trans) }} /
                                    {{ statistic.totalDistance|renderMeasurement(0, 'total'|trans) }}
                                {% else %}
                                    0<span class="text-xs">{{ statistic.totalDistance.getSymbol() }}</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-2 truncate">
                                {{ statistic.totalElevation|renderMeasurement(0) }}
                            </td>
                            <td class="px-6 py-2 truncate" title="{{ statistic.movingTimeInHours.toFloat()|formatNumber(1) }}h">
                                {{ statistic.movingTimeForHumans }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% for activityType,stats in statsPerActivityType %}
            <div id="dayTimeStats{{ activityType }}{{ uniqueId }}" role="tabpanel"
                 aria-labelledby="dayTimeStats{{ activityType }}{{ uniqueId }}-tab">
                <div class="h-80" data-echarts-options='{{ stats.chart }}'></div>
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-center text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-2 py-3 sticky left-0 bg-gray-50">

                            </th>
                            <th scope="col" class="px-6 py-3">
                                # {{ "workouts"|trans }}
                            </th>
                            <th scope="col" class="px-6 py-3">
                                <div class="flex items-center justify-center">
                                    {{ svg('distance') }}
                                </div>
                            </th>
                            <th scope="col" class="px-6 py-3">
                                <div class="flex items-center justify-center">
                                    {{ svg('elevation') }}
                                </div>
                            </th>
                            <th scope="col" class="px-6 py-3">
                                <div class="flex items-center justify-center">
                                    {{ svg('time') }}
                                </div>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for statistic in stats.dayTimeStats.getData() %}
                            <tr class="bg-white border-b">
                                <th scope="row"
                                    class="px-2 py-2 sticky left-0 bg-white font-medium text-gray-900 whitespace-nowrap">
                                    <div>{{ statistic.daytime|trans }}</div>
                                    <div class="font-normal text-xs">{{ statistic.daytime.getHours()[0] }}h
                                        - {{ statistic.daytime.getHours()[1] }}h
                                    </div>
                                </th>
                                <td class="px-6 py-2">
                                    {{ statistic.numberOfWorkouts }}
                                </td>
                                <td class="px-6 py-2 truncate">
                                    {% if statistic.totalDistance.toFloat() > 0 %}
                                        {{ statistic.averageDistance|renderMeasurement(0, 'avg'|trans) }} /
                                        {{ statistic.totalDistance|renderMeasurement(0, 'total'|trans) }}
                                    {% else %}
                                        0<span class="text-xs">{{ statistic.totalDistance.getSymbol() }}</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-2 truncate">
                                    {{ statistic.totalElevation|renderMeasurement(0) }}
                                </td>
                                <td class="px-6 py-2 truncate">
                                    {{ statistic.movingTimeForHumans }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endfor %}
    </div>
{% endautoescape %}