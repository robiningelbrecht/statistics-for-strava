{% autoescape false %}
    <div class="mb-4">
        <h3 class="text-lg font-semibold"> {{ "Current streaks"|trans }}</h3>
        {% if subtitle %}
            <div class="text-sm text-gray-500">
                {{ subtitle }}
            </div>
        {% endif %}
    </div>
    <div class="grow w-full flex justify-center items-center gap-x-2 text-center">
        {% set dayStreakTitleAttribute = dayStreakStartDate ? "Streak started on {date}"|trans({'{date}': dayStreakStartDate|formatDate('normal')})  %}
        <div title="{{ dayStreakTitleAttribute }}" class="grow py-5 border border-gray-200 border-t-4 border-t-strava-orange rounded-sm">
            <div class="text-3xl font-extrabold">
                {{ dayStreak }}
            </div>
            <div class="text-sm">{{ "days"|trans }}</div>
        </div>
        {% set weekStreakTitleAttribute = weekStreakStartDate ? "Streak started on {date}"|trans({'{date}': weekStreakStartDate|formatDate('normal')})  %}
        <div title="{{ weekStreakTitleAttribute }}" class="grow py-5 border border-gray-200 border-t-4 border-t-strava-orange rounded-sm">
            <div class="text-3xl font-extrabold">
                {{ weekStreak }}
            </div>
            <div class="text-sm">{{ "weeks"|trans }}</div>
        </div>
        {% set monthStreakTitleAttribute = monthStreakStartDate ? "Streak started on {date}"|trans({'{date}': monthStreakStartDate|formatDate('normal')})  %}
        <div title="{{ monthStreakTitleAttribute }}" class="grow py-5 border border-gray-200 border-t-4 border-t-strava-orange rounded-sm">
            <div class="text-3xl font-extrabold">
                {{ monthStreak }}
            </div>
            <div class="text-sm">{{ "months"|trans }}</div>
        </div>
    </div>
    <div class="mt-1 text-xs text-center">
        Last activity <span class="font-bold">{{ mostRecentActivity.getStartDate()|formatDate('normal') }}</span>
    </div>
{% endautoescape %}